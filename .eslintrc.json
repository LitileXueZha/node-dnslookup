{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": "off",
        "no-underscore-dangle": "warn",
        "no-restricted-syntax": "off",
        "no-use-before-define": ["error", { "functions": false }],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}
